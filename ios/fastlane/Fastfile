# frozen_string_literal: true

default_platform(:ios)

platform :ios do
  # App Store Connect API Key認証
  def api_key
    app_store_connect_api_key(
      key_id: ENV["APP_STORE_CONNECT_API_KEY_KEY_ID"],
      issuer_id: ENV["APP_STORE_CONNECT_API_KEY_ISSUER_ID"],
      key_filepath: ENV["APP_STORE_CONNECT_API_KEY_KEY_FILEPATH"],
      duration: 1200,
      in_house: false
    )
  end

  desc "メタデータをApp Store Connectからダウンロード"
  lane :download_metadata do
    sh("fastlane deliver download_metadata --app_identifier com.entaku.smartVideoPlayer --api_key_path ./fastlane/api_key.json --force")
  end

  desc "スクリーンショットをダウンロード"
  lane :download_screenshots do
    sh("fastlane deliver download_screenshots --app_identifier com.entaku.smartVideoPlayer --api_key_path ./fastlane/api_key.json --force")
  end

  desc "TestFlightにアップロード"
  lane :beta do
    api_key
    build_app(
      scheme: "videoPlayer",
      export_method: "app-store"
    )
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end

  desc "App Storeにリリース"
  lane :release do
    api_key
    build_app(
      scheme: "videoPlayer",
      export_method: "app-store"
    )
    deliver(
      submit_for_review: false,
      force: true
    )
  end

  desc "メタデータのみアップロード"
  lane :upload_metadata do
    api_key
    version_number = get_version_number(
      xcodeproj: "videoPlayer.xcodeproj",
      target: "videoPlayer"
    )
    deliver(
      skip_binary_upload: true,
      skip_screenshots: true,
      force: true,
      app_version: version_number,
      build_number: "latest",
      submit_for_review: true,
      automatic_release: false,
      submission_information: {
        add_id_info_uses_idfa: false,
        export_compliance_uses_encryption: false,
        export_compliance_platform: "ios"
      },
      run_precheck_before_submit: true,
      precheck_include_in_app_purchases: false
    )
  end

  desc "フルリリース（ビルド + メタデータ + 提出）"
  lane :full_release do
    api_key
    build_app(
      scheme: "videoPlayer",
      export_method: "app-store"
    )
    deliver(
      submit_for_review: true,
      force: true
    )
  end
end
